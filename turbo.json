{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "gh-pages-build": {},
        "build": {
            "outputs": ["build/**", "dist/**", ".next/**", "out/**"],
            "dependsOn": ["^build"],
            "inputs": [
                "src/**",
                "package.json",
                "tsconfig.json",
                "tsup.config.ts",
                "next.config.js",
                "tailwind.config.js"
            ],
            "cache": true
        },
        "purge": {
            "cache": false
        },
        "preview": {
            "dependsOn": ["build"],
            "cache": false
        },
        "lint": {
            "inputs": ["src/**", "eslint.config.mjs", "package.json"],
            "cache": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        },
        "test": {
            "inputs": ["src/**", "test/**", "tests/**", "package.json"],
            "cache": true
        },
        "typecheck": {
            "inputs": ["src/**", "tsconfig.json", "package.json"],
            "cache": true
        }
    }
}
