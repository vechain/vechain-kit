{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "gh-pages-build": {},
        "build": {
            "outputs": ["build/**", "dist/**"],
            "dependsOn": ["^build"],
            "cache": false
        },
        "purge": {
            "cache": false
        },
        "preview": {
            "dependsOn": ["build"],
            "cache": false
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    }
}
