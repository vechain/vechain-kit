{
    "name": "@vechain/vechain-kit-ui",
    "version": "0.1.0",
    "description": "Framework-agnostic UI components for VeChain Kit",
    "homepage": "https://github.com/vechain/vechain-kit",
    "repository": "github:vechain/vechain-kit",
    "license": "MIT",
    "sideEffects": false,
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
